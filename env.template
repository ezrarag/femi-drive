# OpenAI Configuration (Optional - for AI voice features)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration (Optional - for voice/SMS features)
# Get these from your Twilio console at https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_WEBHOOK_URL=https://your-domain.com/api/voice

# Voice AI Services (Optional - for enhanced voice features)
# ElevenLabs for high-quality voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Deepgram for real-time speech-to-text
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AssemblyAI for advanced speech processing
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Azure Cognitive Services for speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Google Cloud Text-to-Speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Stripe Configuration (Required for investment and booking features)
# Get these from your Stripe dashboard at https://dashboard.stripe.com/
# Live keys for finance@readyaimgo.biz
